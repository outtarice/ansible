- name: Install base packages
  yum: name={{ item }} state=installed
  with_items:
    - net-tools
    - sysstat
    - vim
  tags:
    - packages
- name: Update profile
  lineinfile:
    path: /etc/profile
    line: "{{ item }}"
    state: present
  with_items:
    - 'set -o vi'
    - 'alias vi=vim'
